<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="controller"
            type="io.github.lamtran.moviebooking.presentation.view.theatre.seat.ChosenSeatHolder.Controller" />
    </data>

    <FrameLayout
        style="@style/Theatre_Seat"
        android:background="@color/chosen_seat"
        android:onClick="@{controller::onClick}"
        app:longClick="@{controller::onLongClick}">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theatre_Seat_Number"
            android:text="@{@string/seat_number(controller.number)}"
            tools:text="12" />
    </FrameLayout>
</layout>
